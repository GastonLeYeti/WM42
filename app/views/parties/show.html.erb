        <p><%= @party.bible %></p>
      </div>

<div class="col s4">
  <div class="row">
    <div class="col s12">
      <div class="card blue-grey lighten-1 recap-univers">
        <div class="card-content white-text">
          <span class="card-title">Univers #<%= @party.id %></span>
          <div class="univers-content">
            <div class="row recap-line">
              <i class="fa-solid fa-circle round-univers"></i>
              <span class="dashline"></span>
              <span class="univers-name"><%= @party.universe.name %></span>
            </div>
            <div class="row recap-line">
              <i class="fa-solid fa-circle round-univers"></i>
              <span class="dashline"></span>
              <span class="univers-name"><%= @party.players.count %> players</span>
            </div>
            <% @party.maps.each do |map| %>
              <div class="row recap-line">
                <i class="fa-solid fa-circle round-univers"></i>
                <span class="dashline"></span>
                <span class="univers-name">
                    <%= map.name %>
                </span>
              </div>
            <% end %>
            <div class="row recap-line">
              <i class="fa-solid fa-circle round-univers"></i>
              <span class="dashline"></span>
              <span class="univers-name"><%= @party.universe.creature.count %></span>
            </div>
            <div class="row recap-line">
              <i class="fa-solid fa-circle round-univers"></i>
              <span class="dashline"></span>
              <span class="univers-name">Nope</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col s12">
      <div class="card blue-grey lighten-1 recap-univers">
        <div class="card-content white-text">
          <span class="card-title">Players</span>
